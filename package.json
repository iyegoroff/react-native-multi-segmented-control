{
  "description": "Multi segmented control for iOS & Android",
  "keywords": [
    "react-native",
    "segmented-control"
  ],
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "name": "react-native-multi-segmented-control",
  "author": "iyegoroff <iegoroff@gmail.com>",
  "bugs": {
    "url": "https://github.com/iyegoroff/react-native-multi-segmented-control/issues"
  },
  "homepage": "https://github.com/iyegoroff/react-native-multi-segmented-control#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/iyegoroff/react-native-multi-segmented-control.git"
  },
  "version": "0.0.2",
  "peerDependencies": {
    "@babel/runtime": "*",
    "react": "*",
    "react-native": "*"
  },
  "devDependencies": {
    "@types/react-native": "^0.60.3",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-react": "^4.0.0",
    "typescript": "^3.5.3"
  },
  "scripts": {
    "build": "rm -rf dist && tsc -p ./src",
    "watch": "tsc -p ./src -w",
    "lint": "npm run lint:ts && npm run lint:kotlin && npm run lint:swift",
    "lint:ts": "tslint --fix -p ./src && tslint --fix -p ./MSCExample/src",
    "lint:kotlin": "cd MSCExample/android && ./gradlew ktlintMainSourceSetFormat",
    "lint:swift": "cd ios && ../MSCExample/ios/Pods/SwiftLint/swiftlint autocorrect && ../MSCExample/ios/Pods/SwiftLint/swiftlint",
    "ci:build": "cd MSCExample && npm i",
    "ci:lint": "npm run ci:lint:ts && npm run ci:lint:kotlin && npm run ci:lint:swift",
    "ci:lint:ts": "tslint -p ./src && tslint -p ./MSCExample/src",
    "ci:lint:kotlin": "cd MSCExample/android && ./gradlew ktlintMainSourceSetCheck",
    "ci:lint:swift": "cd ios && ../MSCExample/ios/Pods/SwiftLint/swiftlint",
    "ci:compile:android": "cd MSCExample/android && ./gradlew compileDebugSources",
    "ci:compile:ios": "cd MSCExample/ios && export RCT_NO_LAUNCH_PACKAGER=\"true\" && xcodebuild CODE_SIGN_IDENTITY=\"\" CODE_SIGNING_REQUIRED=\"NO\" CODE_SIGN_ENTITLEMENTS=\"\" CODE_SIGNING_ALLOWED=\"NO\" -workspace MSCExample.xcworkspace -configuration Debug -scheme MSCExample test",
    "preversion": "npm run lint && npm run build",
    "postversion": "git push && git push --tags"
  },
  "files": [
    "android",
    "ios",
    "src",
    "dist",
    "MSCExample",
    "tslint.json",
    "*.md",
    "*.podspec",
    "LICENSE"
  ],
  "dependencies": {
    "ts-tiny-invariant": "0.0.2"
  }
}
